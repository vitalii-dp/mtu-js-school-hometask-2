<title>Registration page</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<div class="container-fluid h-100 bg-light text-dark">
  <div class="h-100 d-flex justify-content-center align-items-center">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
      <div class="text-center">
        <h1>Remove the blocks</h1>
        <h3>Registration page</h3>
      </div>
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control <%  %>" id="name" name="name" placeholder="Name"
            value="<%- locals.name || '' %>" required>
          <small class="form-text text-muted">
            Must contain only latin and cyrillic letters, and numbers
          </small>
        </div>
        <div class="form-group">
          <label for="login">Login</label>
          <input type="text" class="form-control" id="login" name="login" placeholder="Login"
            value="<%- locals.login || '' %>" required>
          <small class="form-text text-muted">
            Must be unique and contain only lower case letters and numbers
          </small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password"
            title="Must be at least 8 characters long" required>
          <small class="form-text text-muted">
            Must be at least 8 characters long
          </small>
        </div>
        <div class="form-group">
          <label for="password">Confirm password</label>
          <input type="password" class="form-control" id="confirm_password" name="confirm_password"
            placeholder="Confirm password" required>
        </div>
        <% if (locals.error) { %>
          <div class="alert alert-warning p-1 mt-2">
            <%= locals.error %>
          </div>
          <% } %>
            <div class="col text-center">
              <button type="submit" class="btn btn-primary">Create user</button>
            </div>
            <hr>
            <div class="col text-center">
              <a href="/login">
                <p>Already have an account? Back to login page</p>
              </a>
            </div>
      </form>
    </div>
  </div>
</div>